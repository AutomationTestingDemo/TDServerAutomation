<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>com.ca:tds-remote-service</include>
			</includes>
			<outputDirectory>remote-service</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>../../tds-remote-service-modules/tds-remote-service/target/</directory>
			<outputDirectory>remote-service</outputDirectory>
			<excludes>
				<exclude>classes/**</exclude>
				<exclude>generated-test-sources/**</exclude>
				<exclude>maven-archiver/**</exclude>
				<exclude>surefire-reports/**</exclude>
				<exclude>test-classes/**</exclude>
				<exclude>generated-sources/**</exclude>
				<exclude>maven-status/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>../../remote_service_home</directory>
			<outputDirectory>remote-service</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>